<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" prefHeight="100" prefWidth="300"
          stylesheets="@../css/style.css"
          vgap="10" xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.jfx.Controller.AddItemDialogController"
          onKeyPressed="#onKeyPressed">
    <children>
        <fx:include source="Header.fxml" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label prefWidth="100" text="Field:" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="fieldText" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </TextField>
        <Label prefWidth="100" text="Value:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="valueText" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </TextField>
        <Button fx:id="addButton" GridPane.rowIndex="3" GridPane.columnIndex="0" text="Add" prefWidth="50"
                onAction="#onAddClick">
            <GridPane.margin>
                <Insets left="10.0" bottom="10.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
