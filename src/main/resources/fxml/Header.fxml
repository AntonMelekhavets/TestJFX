<?xml version="1.0" encoding="UTF-8"?>


<?import com.test.jfx.Control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<HBox fx:id="controlBar" fx:controller="com.test.jfx.Controller.HeaderController"
      stylesheets="@../css/style.css"
      alignment="CENTER_RIGHT" prefHeight="25.0" maxHeight="25.0" spacing="10"
      prefWidth="406.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
      onMousePressed="#onMousePressed" onMouseDragged="#onMouseDragged" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="3" bottom="3" right="3" left="3"/>
    </padding>
    <Label fx:id="dialogTitle"/>
    <VBox HBox.hgrow="ALWAYS"/>
    <SystemButton fx:id="hideButton" imageUrl="/images/minimize.png" onAction="#onMinimizeClick">
    </SystemButton>
    <SystemButton fx:id="maximizeButton" imageUrl="/images/maximize.png" onAction="#onMaximizeClick">
    </SystemButton>
    <SystemButton fx:id="closeButton" imageUrl="/images/close.png" onAction="#onCloseClick">
    </SystemButton>
</HBox>
